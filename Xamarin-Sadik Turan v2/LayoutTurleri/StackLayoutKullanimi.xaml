<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="Course.LayoutTurleri.StackLayoutKullanimi" BackgroundColor="#16817a">
    
    <ContentPage.Content>
        <StackLayout Spacing="20" VerticalOptions="Center">
            
            <Label Text="Awesome App" 
                   FontSize="30" FontAttributes="Bold" 
                   HorizontalOptions="Center" TextColor="White"/>
            
            <Label Text="Welcome to out awesome app" FontSize="25" 
                   HorizontalOptions="Center" TextColor="White"/>

            <StackLayout Orientation="Horizontal" Padding="25">
                <Button Text="Login" TextColor="White" 
                        CornerRadius="5" BackgroundColor="#f4a548"
                        HorizontalOptions="FillAndExpand"/>
                
                <Button Text="Register" TextColor="White" 
                        CornerRadius="5" BackgroundColor="#f4a548"
                        HorizontalOptions="FillAndExpand"/>
            </StackLayout>
            
        </StackLayout>
    </ContentPage.Content>
    
</ContentPage>