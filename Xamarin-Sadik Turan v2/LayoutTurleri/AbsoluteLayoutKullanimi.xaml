<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="Course.LayoutTurleri.AbsoluteLayoutKullanimi">
    <ContentPage.Content>

        <AbsoluteLayout BackgroundColor="Aqua">
            <BoxView BackgroundColor="Yellow" 
                     AbsoluteLayout.LayoutBounds="10,10,100,100"/>
            <BoxView BackgroundColor="Blue" 
                     AbsoluteLayout.LayoutBounds="120,10,1,100" AbsoluteLayout.LayoutFlags="WidthProportional"/>
            
            <BoxView BackgroundColor="Green" 
                     AbsoluteLayout.LayoutBounds="120,10,100,1" AbsoluteLayout.LayoutFlags="HeightProportional"/>

            <BoxView BackgroundColor="Red" 
                     AbsoluteLayout.LayoutBounds="120,10,1,0.3" AbsoluteLayout.LayoutFlags="SizeProportional"/>
        </AbsoluteLayout>
        
    </ContentPage.Content>
</ContentPage>