<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="XamarinLists.SimpleListView">

    <ContentPage.Content>
        
        <!--
            Code Behind ile işlemi tamamladık
            SeparatorVisibility="None" : Bu özellik listelenen her eleman arasında bulunan çizgiyi kaldırır.
            SeperatorColor="Red" : Bu özellik listenen her eleman arasında bulunan çizginin rengini belirler.
            Header:"title" : List view bittikten sonra altına header ekler.
            Footer:"footer": listview bittikten sonra altına footer ekler.
        -->
        
        <!-- <ListView x:Name="simpleListView" Header="Başlık" Footer="Alt Bölüm"/> -->
        
        <ListView x:Name="headerAndFooterExample" SeparatorColor="Black">
            <ListView.Header>
                <StackLayout>
                    <Label Text="header" TextColor="Orange" BackgroundColor="Gray"/>
                </StackLayout>
            </ListView.Header>
            <ListView.Footer>
                <Label Text="header" TextColor="Orange" BackgroundColor="Gray"/>
            </ListView.Footer>
        </ListView>
        
    </ContentPage.Content>
</ContentPage>